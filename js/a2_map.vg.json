{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "title": "Melbourne Cafes & Restaurants in 2024 â€“ Seats and Types",
  "projection": {
    "type": "mercator",
    "scale": {"signal": "view === 'cbd' ? 2500000 : 900000"},
    "center": {"signal": "view === 'cbd' ? [144.9631, -37.8136] : [144.9611, -37.8116]"}
  },
  "params": [
    {
      "name": "view",
      "value": "overview",
      "bind": {
        "input": "select",
        "options": ["overview", "cbd"],
        "name": "View: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Brian-w-m/FIT3179/main/js/victoriamap.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Brian-w-m/FIT3179/main/js/property-boundaries.topojson",
        "format": {"type": "topojson", "feature": "property-boundaries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Brian-w-m/FIT3179/main/js/road-corridors.topojson",
        "format": {"type": "topojson", "feature": "road-corridors"}
      },
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1},
      "encoding": {
        "fill": {
          "field": "properties.str_type",
          "type": "nominal",
          "scale": {
            "domain": ["River", "Rail/Tram", "Council Major", "Council Minor", "Private", "Arterial", "Lease/Reserve", "Citylink", "Port Roads", "Road Safety Act", "Citylink2", "Freeway", "Proposed Public", "Undetermined", "Parks Victoria"],
            "range": ["lightblue", "#b2b7bf", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray", "gray"]
          },
          "legend": {
            "title": "Infrastructure",
            "labelExpr": "datum.value === 'River' ? 'River' : datum.value === 'Rail/Tram' ? 'Rail/Tram' : 'Roads'",
            "values": ["River", "Rail/Tram", "Council Major"]
          }
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Brian-w-m/FIT3179/main/data/cafes-and-restaurants-with-seating-capacity.csv"
      },
      "mark": {
        "type": "circle",
        "opacity": 0.8
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "number_of_seats",
          "type": "quantitative",
          "title": "Number of seats",
          "scale": {"range": [10, 400]}
        },
        "color": {
          "field": "seating_type",
          "type": "nominal",
          "scale": {
            "domain": ["Seats - Indoor", "Seats - Outdoor"],
            "range": ["#357ae8", "#FF4D00"]
          },
          "legend": {
            "title": "Seating type",
            "labelExpr": "datum.value === 'Seats - Indoor' ? 'Indoor' : 'Outdoor'"
          }
        },
        "tooltip": [
          {"field": "trading_name", "type": "nominal", "title": "Name"},
          {"field": "building_address", "type": "nominal", "title": "Address"},
          {"field": "industry_anzsic4_description", "type": "nominal", "title": "Description"},
          {"field": "seating_type", "type": "nominal", "title": "Seating Type"},
          {"field": "number_of_seats", "type": "quantitative", "title": "Number of Seats"}
        ]
      }
    }
  ]
}